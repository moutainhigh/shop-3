<?xml version="1.0" encoding="GBK"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="manage.area">    <sql id="areaColumns">		a.id,		a.parent_id AS "parent.id",		a.parent_ids,		a.code,		a.name,		a.type,		p.name AS "parent.name"	</sql>	    <sql id="areaJoins">		LEFT JOIN t_area p ON p.id = a.parent_id    </sql>		<select id="manage.area.selectPageList" parameterType="com.tuisitang.modules.shop.entity.Area" resultType="com.tuisitang.modules.shop.entity.Area">	 SELECT			<include refid="areaColumns"/>		FROM t_area a		<include refid="areaJoins"/>		WHERE 1 = 1  order by id desc  limit #{offset},#{pageSize} 	</select> 	<select id="manage.area.selectPageCount" parameterType="com.tuisitang.modules.shop.entity.Area" resultType="java.lang.Integer">	 SELECT COUNT(1)		FROM t_area a		<include refid="areaJoins"/>		WHERE 1 = 1		ORDER BY a.code 	</select>		<select id="manage.area.selectList" parameterType="com.tuisitang.modules.shop.entity.Area" resultType="com.tuisitang.modules.shop.entity.Area">		SELECT		<include refid="areaColumns" />		FROM t_area a		<include refid="areaJoins" />		WHERE 1 = 1		ORDER BY a.code	</select>		<!-- 	<select id="manage.area.selectListByPcode" parameterType="string" resultType="com.tuisitang.modules.shop.entity.Area">	 select * from t_area t where 1=1 and pcode=#{pcode} order by code	</select>	 -->		<select id="manage.area.selectListByParentId" parameterType="long" resultType="com.tuisitang.modules.shop.entity.Area">		SELECT		<include refid="areaColumns" />		FROM t_area a		<include refid="areaJoins" />		WHERE a.parent_id = #{parentId}		ORDER BY a.code	</select>			<select id="manage.area.getCount" parameterType="com.tuisitang.modules.shop.entity.Area" resultType="int">	 select count(*) c from t_area t where 1=1 	 <if test="code!=null and code!=''"> and code=#{code} </if>	 <if test="pcode!=null and pcode!=''"> and pcode=#{pcode} </if>	</select> 	<insert id="manage.area.insert" parameterType="com.tuisitang.modules.shop.entity.Area" useGeneratedKeys="true" keyProperty="id">		INSERT INTO t_area(			id, 			parent_id, 			parent_ids, 			code, 			name, 			sort,			type		) VALUES (			#{id}, 			#{parent.id}, 			#{parentIds}, 			#{code}, 			#{name}, 			#{sort}, 			#{type}		)	</insert>		<update id="manage.area.update" parameterType="com.tuisitang.modules.shop.entity.Area">		UPDATE t_area SET 			parent_id = #{parent.id}, 			parent_ids = #{parentIds}, 			code = #{code}, 			name = #{name}, 			sort = #{sort}, 			type = #{type}		WHERE id = #{id}	</update>	<select id="manage.area.selectOne" parameterType="com.tuisitang.modules.shop.entity.Area" resultType="com.tuisitang.modules.shop.entity.Area">		SELECT <include refid="areaColumns" />		FROM t_area a <include refid="areaJoins" />		WHERE 1=1		<if test="id!=null"> and a.id=#{id} </if>		<if test="code!=null and code!=''"> and a.code=#{code} </if>	</select>		<delete id="manage.area.deleteById" parameterType="com.tuisitang.modules.shop.entity.Area">		DELETE FROM t_area WHERE id = #{id} OR parent_ids LIKE CONCAT('%,', #{id}, ',%')	</delete>		<delete id="manage.area.deleteAll">		DELETE FROM t_area 	</delete>		<delete id="manage.area.delete" parameterType="com.tuisitang.modules.shop.entity.Area">		DELETE FROM t_area where code=#{code}	</delete>	</mapper>